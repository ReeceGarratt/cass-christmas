---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'UX Designer Portfolio - Creating thoughtful digital experiences', image = '/og-image.jpg' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
-    <link rel="icon" href={`${base}favicon.ico`} />
-    <link rel="icon" type="image/png" sizes="16x16" href={`${base}favicon-16x16.png`} />
-    <link rel="icon" type="image/png" sizes="32x32" href={`${base}favicon-32x32.png`} />
-    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
-    <link rel="apple-touch-icon" sizes="180x180" href={`${base}apple-touch-icon.png`} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
  </head>
  <body>
    <header class="fixed w-full top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200">
      <nav class="container-custom py-4">
        <div class="flex justify-between items-center">
          <a href={`${base}`} class="text-xl font-bold gradient-text pe-8">Portfolio</a>
          <ul class="flex gap-8">
            <li><a href={`${base}`} class="hover:text-primary transition-colors">Home</a></li>
            <li><a href={`${base}work`} class="hover:text-primary transition-colors">Work</a></li>
            <li><a href={`${base}about`} class="hover:text-primary transition-colors">About</a></li>
            <li><a href={`${base}contact`} class="hover:text-primary transition-colors">Contact</a></li>
          </ul>
        </div>
      </nav>
    </header>
    
    <main class="pt-20 bg-stone-100">
      <slot />
    </main>
    
    <footer class="bg-stone-100 py-12">
      <div class="container-custom">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-gray-600">Â© {new Date().getFullYear()} UX Designer Portfolio. All rights reserved.</p>
          <div class="flex gap-6">
        <a
                  href="https://github.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex-1 min-w-0 h-12 bg-gray-100 rounded-full flex items-center justify-center hover:bg-primary hover:text-white transition-colors"
                >
                  <img
                    src={`${base}github-mark.svg`}
                    alt="GitHub logo"
                    class="w-8 h-8 transition duration-200 block group-hover:hidden"
                  />
                  <img
                    src={`${base}github-mark-white.svg`}
                    alt="GitHub logo white"
                    class="w-8 h-8 transition duration-200 hidden group-hover:block"
                  />
                </a>

                <a
                  href="https://www.linkedin.com/in/cassandra-garratt-278379131/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex-1 min-w-0 h-12 bg-gray-100 rounded-full flex items-center justify-center hover:bg-primary hover:text-white transition-colors"
                >
                  <img
                    src={`${base}InBug-Black.png`}
                    alt="LinkedIn logo"
                    class="w-[32px] h-[29px] transition duration-200 group-hover:invert group-hover:brightness-200"
                  />
                </a>

                <a
                  href="https://dribbble.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex-1 min-w-0 h-12 bg-gray-100 rounded-full flex items-center justify-center hover:bg-primary hover:text-white transition-colors"
                >
                  <img
                    class="w-[65px] h-[65px] transition duration-200 block group-hover:hidden"
                    src={`${base}dribbble.svg`}
                    alt="Dribbble logo"/>
                  <img
                    class="w-[65px] h-[65px] transition duration-200 hidden group-hover:block"
                    src={`${base}dribbble-white.svg`}
                    alt="Dribbble logo"/>
                </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
