---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'UX Designer Portfolio - Creating thoughtful digital experiences', image = '/og-image.jpg' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
       <meta charset="UTF-8" />
       <meta name="viewport" content="width=device-width, initial-scale=1.0" />
       <link rel="icon" href={`${base}favicon.ico`} />
       <link rel="icon" type="image/png" sizes="16x16" href={`${base}favicon-16x16.png`} />
       <link rel="icon" type="image/png" sizes="32x32" href={`${base}favicon-32x32.png`} />
       <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
       <link rel="apple-touch-icon" sizes="180x180" href={`${base}apple-touch-icon.png`} />
       <meta name="generator" content={Astro.generator} />
      <!-- Optimize Google Fonts loading -->
      <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" media="all" />
    
    
      <title>{title}</title>
      <meta name="description" content={description} />
      <link rel="canonical" href={canonicalURL} />
      

      <meta property="og:type" content="website" />
      <meta property="og:url" content={canonicalURL} />
      <meta property="og:title" content={title} />
      <meta property="og:description" content={description} />
      <meta property="og:image" content={new URL(image, Astro.site)} />
    
      <meta property="twitter:card" content="summary_large_image" />
      <meta property="twitter:url" content={canonicalURL} />
      <meta property="twitter:title" content={title} />
      <meta property="twitter:description" content={description} />
      <meta property="twitter:image" content={new URL(image, Astro.site)} />
  </head>
  <body class="h-full">
    <header class="fixed w-full top-0 z-50 bg-b-2 backdrop-blur-md border-b border-gray-200">
      <nav class="container-custom py-4">
        <div class="flex justify-between items-center">
          <a href={`${base}`} class="text-xl font-bold gradient-text pe-8">Astro Site</a>
          <ul class="flex gap-8">
            <li><a href={`${base}`} class="hover:text-accent transition-colors">Home</a></li>
            <li><a href={`${base}work`} class="hover:text-accent transition-colors">Work</a></li>
            <li><a href={`${base}about`} class="hover:text-accent transition-colors">About</a></li>
            <li><a href={`${base}contact`} class="hover:text-accent transition-colors">Contact</a></li>
          </ul>
        </div>
      </nav>
    </header>
    
    <main class="h-full min-h-[calc(100vh-10em)] pt-12 bg-b-1">
      <slot />
    </main>
    
    <footer class="bg-b-2 py-12">
      <div class="container-custom">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-gray-t">Â© {new Date().getFullYear()} Cassandra Garratt. All rights reserved.</p>
          <div class="flex gap-6">
            <a
              href="https://github.com"
              target="_blank"
              rel="noopener noreferrer"
              class="group flex-1 shadow-md min-w-0 w-12 h-12 bg-primary rounded-full flex items-center justify-center hover:bg-accent2 transition-colors"
            >
              <img
                src={`${base}github-mark.svg`}
                alt="GitHub logo"
                class="w-8 h-8 transition duration-200 block group-hover:hidden"
              />
              <img
                src={`${base}github-mark-white.svg`}
                alt="GitHub logo white"
                class="w-8 h-8 transition duration-200 hidden group-hover:block"
              />
            </a>

            <a
              href="https://www.linkedin.com/in/cassandra-garratt-278379131/"
              target="_blank"
              rel="noopener noreferrer"
              class="group flex-1 shadow-md min-w-0 w-12 h-12 bg-primary rounded-full flex items-center justify-center hover:bg-accent2 transition-colors"
            >
              <img
                src={`${base}InBug-Black.png`}
                alt="LinkedIn logo"
                class="w-8 h-[29px] transition duration-200 group-hover:invert group-hover:brightness-200"
              />
            </a>

            <a
              href="https://dribbble.com"
              target="_blank"
              rel="noopener noreferrer"
              class="group flex-1 shadow-md min-w-0 w-12 h-12 bg-primary rounded-full flex items-center justify-center hover:bg-accent2 transition-colors"
            >
              <img
                class="w-[65px] h-[65px] transition duration-200 block group-hover:hidden"
                src={`${base}dribbble.svg`}
                alt="Dribbble logo"/>
              <img
                class="w-[65px] h-[65px] transition duration-200 hidden group-hover:block"
                src={`${base}dribbble-white.svg`}
                alt="Dribbble logo"/>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
