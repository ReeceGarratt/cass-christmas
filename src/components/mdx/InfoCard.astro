---
// InfoCard.astro
const { icon } = Astro.props;
---
<div class="info-card">
  <div class="icon">{icon}</div>
  <div class="info-content">
    <slot />
  </div>
</div>

<style>
.info-card {
  position: relative;
  background: #fff;
  border-radius: 1.5rem;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.06);
  padding: 2.5rem 1.5rem 1.5rem 1.5rem;
  min-height: 220px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.icon {
  position: absolute;
  top: -32px;
  right: 1.5rem;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}
.info-content {
  font-size: 1.1rem;
  line-height: 1.6;
}
.info-content ul {
  list-style: disc;
  margin-left: 1.5rem;
}
.info-content b, .info-content strong {
  font-weight: bold;
}
</style>
