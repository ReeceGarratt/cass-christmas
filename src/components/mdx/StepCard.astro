---
// StepCard.astro
const { number } = Astro.props;
---
<div class="step-card">
  <div class="circle" >{number}</div>
  <div class="step-content">
    <slot />
  </div>
</div>

<style>
.step-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 1.5rem;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.06);
  min-height: 100px;
  width: 275px;
  padding: 1rem 1rem 1rem 1rem;
  margin-bottom: 1rem;
  position: relative;
  background: var(--color-b-2);
}
.circle {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  font-size: 1.5rem;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: -24px;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.08);
  background: var(--color-accent1);
}
.step-content {
  margin-top: 48px;
  text-align: center;
  font-size: 1.5rem;
  font-weight: bold;
  word-break: break-word;
  line-height: 1.2;
  max-width: 90%;
}
</style>
