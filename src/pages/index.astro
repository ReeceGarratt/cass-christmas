---
import BaseLayout from '../layouts/BaseLayout.astro';

import { getCollection } from 'astro:content';
import WorkCard from '../components/WorkCard';
import SplashScreen from '../components/SplashScreen';

const base = import.meta.env.BASE_URL;
const allWork = await getCollection('work');
const featuredWork = allWork.filter(work => work.data.featured).sort((a, b) => a.data.order - b.data.order).slice(0, 3);
---

<BaseLayout 
  
  title="Cassandra Garratt - Home" 
  description="Cassandra Garratt is a Senior UX Designer with a passion for inclusive technology and user advocacy. Explore her portfolio and get in touch.">

  <!-- <SplashScreen client:only="react" /> -->
   
  <!-- Hero Section -->
  <section class="container-custom py-20">
    <div class="fade-in fade-in-up">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
        Crafting Digital<br />
        <span class="gradient-text">Experiences</span>
      </h1>
    </div>
    <div class="fade-in fade-in-up fade-in-delay-200">
      <p class="text-xl md:text-2xl text-gray-t max-w-2xl mb-8">
        A proactive Senior UX Designer with a passion for inclusive technology and user advocacy. I create intuitive, user-centered designs that solve real problems and delight users.
      </p>
    </div>
    <div class="fade-in fade-in-up fade-in-delay-400">
      <div class="flex gap-4">
        <a href={`${base}work`} class="px-8 py-3 bg-accent2 text-white rounded-full hover:bg-accent2/90 transition-colors font-medium">
          View Work
        </a>
        <a href={`${base}contact`} class="px-8 py-3 border-2 border-accent text-accent rounded-full hover:bg-accent2 hover:text-white transition-colors font-medium">
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Work Section -->
  <section class="py-20 bg-b-1 w-full">
    <div class="container-custom">
      <div class="fade-in fade-in-up">
        <h2 class="text-4xl font-bold mb-4">Featured Work</h2>
        <p class="text-xl text-gray-t mb-12">Selected projects that showcase my design process and problem-solving skills</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredWork.map((work, index) => (
          <div class="fade-in fade-in-up" style={`animation-delay: ${(index+1)*0.1}s;`}>
            <WorkCard
              client:load
              title={work.data.title}
              description={work.data.description}
              client={work.data.client}
              tags={work.data.tags}
              coverImage={work.data.coverImage}
              slug={work.slug}
              base={base}
            />
          </div>
        ))}
      </div>
      
      <div class="fade-in fade-in-up fade-in-delay-400">
        <div class="text-center mt-12">
          <a href={`${base}work`} class="inline-block px-8 py-3 border-2 border-accent text-accent rounded-full hover:bg-accent2 hover:text-white transition-colors font-medium">
            View All Projects
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="container-custom py-20">
    <div class="fade-in fade-in-up">
      <h2 class="text-4xl font-bold mb-12 text-center">Design Approach</h2>
    </div>
    <div class="grid md:grid-cols-3 gap-8 items-stretch">
      <div class="fade-in fade-in-up fade-in-delay-100">
        <div class="flex flex-col h-full p-8 rounded-2xl border border-accent">
          <div class="text-4xl mb-4">üîç</div>
          <h3 class="text-2xl font-bold mb-3">Research</h3>
          <p class="text-gray-t">Deep dive into user needs, behaviors, and pain points to inform design decisions.</p>
        </div>
      </div>
      <div class="fade-in fade-in-up fade-in-delay-200">
        <div class="flex flex-col h-full p-8 rounded-2xl border border-accent">
          <div class="text-4xl mb-4">‚ú®</div>
          <h3 class="text-2xl font-bold mb-3">Design</h3>
          <p class="text-gray-t">Create beautiful, intuitive interfaces that balance aesthetics with functionality.</p>
        </div>
      </div>
      <div class="fade-in fade-in-up fade-in-delay-300">
        <div class="flex flex-col h-full p-8 rounded-2xl border border-accent">
          <div class="text-4xl mb-4">üöÄ</div>
          <h3 class="text-2xl font-bold mb-3">Iterate</h3>
          <p class="text-gray-t">Test, gather feedback, and continuously improve the user experience.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
