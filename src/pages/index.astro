---
import BaseLayout from '../layouts/BaseLayout.astro';
import FadeIn from '../components/FadeIn';
import { getCollection } from 'astro:content';
import WorkCard from '../components/WorkCard';
import SplashScreen from '../components/SplashScreen';

const base = import.meta.env.BASE_URL;
const allWork = await getCollection('work');
const featuredWork = allWork.filter(work => work.data.featured).sort((a, b) => a.data.order - b.data.order).slice(0, 3);
---

<BaseLayout title="UX Designer Portfolio - Home">

  <!-- <SplashScreen client:only="react" /> -->
   
  <!-- Hero Section -->
  <section class="container-custom py-20 md:py-32">
    <FadeIn client:load>
      <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
        Crafting Digital<br />
        <span class="gradient-text">Experiences</span>
      </h1>
    </FadeIn>
    <FadeIn client:load delay={0.2}>
      <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mb-8">
        UX Designer specializing in creating intuitive, user-centered designs that solve real problems and delight users.
      </p>
    </FadeIn>
    <FadeIn client:load delay={0.4}>
      <div class="flex gap-4">
        <a href={`${base}work`} class="px-8 py-3 bg-accent3 text-white rounded-full hover:bg-accent2/90 transition-colors font-medium">
          View Work
        </a>
        <a href={`${base}contact`} class="px-8 py-3 border-2 border-accent text-accent rounded-full hover:bg-accent2 hover:text-white transition-colors font-medium">
          Get in Touch
        </a>
      </div>
    </FadeIn>
  </section>

  <!-- Featured Work Section -->
  <section class="py-16 bg-b-1 md:py-16 w-full">
    <div class="container-custom">
      <FadeIn client:load>
        <h2 class="text-4xl font-bold mb-4">Featured Work</h2>
        <p class="text-xl text-gray-600 mb-12">Selected projects that showcase my design process and problem-solving skills</p>
      </FadeIn>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredWork.map((work, index) => (
          <FadeIn client:load delay={index * 0.1}>
            <WorkCard
              client:load
              title={work.data.title}
              description={work.data.description}
              client={work.data.client}
              tags={work.data.tags}
              coverImage={work.data.coverImage}
              slug={work.slug}
              base={base}
            />
          </FadeIn>
        ))}
      </div>
      
      <FadeIn client:load delay={0.4}>
        <div class="text-center mt-12">
          <a href={`${base}work`} class="inline-block px-8 py-3 border-2 border-accent text-accent rounded-full hover:bg-accent2 hover:text-white transition-colors font-medium">
            View All Projects
          </a>
        </div>
      </FadeIn>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="container-custom py-20">
    <FadeIn client:load>
      <h2 class="text-4xl font-bold mb-12 text-center">Design Approach</h2>
    </FadeIn>
    <div class="grid md:grid-cols-3 gap-8 items-stretch">
      <FadeIn client:load delay={0.1}>
        <div class="flex flex-col h-full p-8 rounded-2xl border border-accent">
          <div class="text-4xl mb-4">üîç</div>
          <h3 class="text-2xl font-bold mb-3">Research</h3>
          <p class="text-gray-600">Deep dive into user needs, behaviors, and pain points to inform design decisions.</p>
        </div>
      </FadeIn>
      <FadeIn client:load delay={0.2}>
        <div class="flex flex-col h-full p-8 rounded-2xl border border-accent">
          <div class="text-4xl mb-4">‚ú®</div>
          <h3 class="text-2xl font-bold mb-3">Design</h3>
          <p class="text-gray-600">Create beautiful, intuitive interfaces that balance aesthetics with functionality.</p>
        </div>
      </FadeIn>
      <FadeIn client:load delay={0.3}>
        <div class="flex flex-col h-full p-8 rounded-2xl border border-accent">
          <div class="text-4xl mb-4">üöÄ</div>
          <h3 class="text-2xl font-bold mb-3">Iterate</h3>
          <p class="text-gray-600">Test, gather feedback, and continuously improve the user experience.</p>
        </div>
      </FadeIn>
    </div>
  </section>
</BaseLayout>
