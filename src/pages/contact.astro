---
import BaseLayout from '../layouts/BaseLayout.astro';

import CopyButton from '../components/CopyButton';
import GlassImage from '../components/GlassImage';

const base = import.meta.env.BASE_URL;
---

<BaseLayout 
  title="Contact - UX Designer Portfolio" 
  description="Get in touch to discuss your project, ask questions, or just say hello."
>

  <section class="container-custom py-20">
    <div class="max-w-4xl mx-auto">
      <div class="fade-in fade-in-up">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-center">
          Let's <span class="gradient-text">Connect</span>
        </h1>
        <p class="text-xl text-gray-t text-center mb-16">
          Have a project in mind or just want to chat? I'd love to hear from you.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-16">

        <!-- Contact Info -->
        <div class="fade-in fade-in-up fade-in-delay-200">
          <div class="space-y-8">
            <div>
              <h2 class="text-2xl font-bold mb-6">Get in Touch</h2>
              <p class="text-gray-t mb-6">
                I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.
              </p>
            </div>

            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="text-2xl -mt-1">üìß</div>
                <div>
                  <div class="font-medium mb-0">Email</div>
                  <div class="flex items-center gap-4">
                    <a href="mailto:workwith@cassandragarratt.com" class="text-accent hover:underline">
                      workwith@cassandragarratt.com
                    </a>
                  
                    <CopyButton client:load text="workwith@cassandragarratt.com" />
                  </div>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="text-2xl">üìç</div>
                <div>
                  <div class="font-medium mb-1">Location</div>
                  <div class="text-gray-t">Johannesburg, South Africa</div>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="text-2xl">üïê</div>
                <div>
                  <div class="font-medium mb-1">Availability</div>
                  <div class="text-gray-t">Open to new opportunities</div>
                </div>
              </div>
            </div>
            
            <div>
              <h3 class="font-medium mb-4">Follow Me</h3>
              <div class="flex gap-4 items-stretch w-full">
                <a
                  href="https://github.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex-1 shadow-sm min-w-0 h-12 bg-b-2 rounded-full flex items-center justify-center hover:bg-accent2 hover:text-white transition-colors duration-100"
                >
                  <img
                    src={`${base}github-mark.svg`}
                    alt="GitHub logo"
                    class="w-8 h-8 transition duration-200 block group-hover:hidden"
                  />
                  <img
                    src={`${base}github-mark-white.svg`}
                    alt="GitHub logo white"
                    class="w-8 h-8 transition duration-200 hidden group-hover:block"
                  />
                </a>

                <a
                  href="https://linkedin.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex-1 shadow-sm min-w-0 h-12 bg-b-2 rounded-full flex items-center justify-center hover:bg-accent2 hover:text-white transition-colors duration-100"
                >
                  <img
                    src={`${base}InBug-Black.png`}
                    alt="LinkedIn logo"
                    class="w-8 h-[29px] transition duration-200 group-hover:invert group-hover:brightness-200"
                  />
                </a>

                <a
                  href="https://dribbble.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex-1 shadow-sm min-w-0 h-12 bg-b-2 rounded-full flex items-center justify-center hover:bg-accent2 hover:text-white transition-colors duration-100"
                >
                  <img
                    class="w-[65px] h-[65px] transition duration-200 block group-hover:hidden"
                    src={`${base}dribbble.svg`}
                    alt="Dribbble logo"/>
                  <img
                    class="w-[65px] h-[65px] transition duration-200 hidden group-hover:block"
                    src={`${base}dribbble-white.svg`}
                    alt="Dribbble logo"/>
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="fade-in fade-in-up fade-in-delay-200">
          <GlassImage 
            client:load 
            alt="Cassandra"
            src={"https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=800&h=500&fit=crop"}
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
