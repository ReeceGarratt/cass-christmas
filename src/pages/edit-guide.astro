---
import BaseLayout from '../layouts/BaseLayout.astro';

import Content from '../content/edit-guide/index.mdx';
const title = "Editing Guide";
const description = "A beginner-friendly guide to editing MDX content in this project.";
---

<BaseLayout title={title} description={description}>
  <section class="container-custom py-20">
    <div class="fade-in fade-in-up fade-in-delay-300">
      <div class="prose prose-lg max-w-4xl mx-auto">
        <Content />
      </div>
    </div>
  </section>
</BaseLayout>

<style is:global>
  @reference "../styles/global.css";

  .prose {
    @apply text-gray-t;
  }
  
  .prose h1 {
    @apply text-center text-4xl font-bold mt-12 mb-4 text-gray-t;
  }

  .prose h2 {
    @apply text-left text-3xl font-bold mt-6 mb-6 text-gray-t;
  }
  
  .prose h3 {
    @apply text-left text-2xl font-bold mt-6 mb-3 text-gray-t;
  }
  
  .prose h4 {
    @apply text-left text-xl font-bold mt-6 mb-3 text-gray-t;
  }

  .prose p {
    @apply mb-4 leading-relaxed;
  }

  .prose .accentText {
    @apply text-accent1;
  }
  
  .prose ul {
    @apply mb-4 ml-6;
    list-style-type: disc;
    padding-left: 0.5rem;
  }
  
  .prose ol {
    @apply mb-4 ml-6;
    list-style-type: decimal;
    padding-left: 0.5rem;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose img {
    @apply rounded-lg my-8;
  }
  
  .prose strong {
    @apply font-semibold text-gray-t;
  }
</style>