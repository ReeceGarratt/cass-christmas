---
import BaseLayout from '../layouts/BaseLayout.astro';
import FadeIn from '../components/FadeIn';
import Content from '../content/editGuide/index.mdx';
const title = "Editing Guide";
const description = "A beginner-friendly guide to editing MDX content in this project.";
---

<BaseLayout title={title} description={description}>
  <section class="container-custom pb-20 pt-16">
    <FadeIn client:load delay={0.3}>
      <div class="prose prose-lg max-w-4xl mx-auto">
        <Content />
      </div>
    </FadeIn>
  </section>
</BaseLayout>
